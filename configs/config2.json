{
    "exp_base": "experiments",
    "exp_name": "find_photo",
    "device": "cuda",
    "data": {
        "train_path": "dataset/train",
        "val_path":  "dataset/validation",
        "test_path": "dataset/test",
        "num_objects": 15,
        "num_image_position": 4,

        "tokenizer_path": "",
        "max_len": 30
    },
    "data_loader": {
        "num_workers": 0
    },
    "model": {
        "backbone": "transformer",
        "embedding_size": 512,

        "image_embedding_dropout_rate": 0.1,
        "num_image_encoder_head": 8,
        "num_image_encoder_layer": 4,

        "text_embedding_dropout_rate": 0.1,
        "num_text_encoder_head": 8,
        "num_text_encoder_layer": 4
    },
    "solver": {
        "num_epochs": 10,
        "batch_size": 64,

        "optimizer": "AdamW",

        "learning_rate": 1e-5,
        "weight_decay": 0,

        "scheduler": "ConstantLR",

        "T_0": 62,
        "T_mult": 1,

        "T_max": 7,

        "gamma": 0.85,

        "checkpoint_period": 200,
        "log_period": 10,
        "eval_period": 1
    },
    "test": {
        "batch_size": 4,
        "num_workers": 0
    }
}