{
    "exp_base": "experiments",
    "exp_name": "fine-tune",
    "device": "cuda",
    "data": {
        "train_path": "dataset/train.json",
        "val_path":  "dataset/validation.json",
        "test_path": "dataset/test.json"
    },
    "data_loader": {
        "num_workers": 0
    },
    "model": {
        "backbone": "RN50x4"
    },
    "solver": {
        "num_epochs": 20,
        "batch_size": 4,

        "optimizer": "AdamW",

        "learning_rate": 1e-8,
        "weight_decay": 0,

        "scheduler": "CosineAnnealingWarmRestarts",

        "T_0": 62,
        "T_mult": 1,

        "T_max": 7,

        "gamma": 0.85,

        "checkpoint_period": 200,
        "log_period": 10,
        "eval_period": 1
    },
    "test": {
        "batch_size": 4,
        "num_workers": 0
    }
}